import java.util.Scanner;

public class PaymentTransactions {
	    private String name;
	    private String surname;
	    private int Age;
	    private long ID_No;
	    //Encapsulated Information

	    public String getName() {
	        return name;
	    }

	    public void setName(String name) {
	        this.name = name;
	    }

	    public String getSurname() {
	        return surname;
	    }

	    public void setSurname(String surname) {
	        this.surname = surname;
	    }

	    public int getAge() {
	        return Age;
	    }

	    public void setAge(int Age) {
	                this.Age = Age;
	    }

	    public long getID_No() {
	        return ID_No;
	    }

	    public void setID_No(long ID_No) {
	        this.ID_No = ID_No;
	    }

	    //Setters and Getters
	    
	    public void regionPayment(){
	        int blackSea = 1189;
	        int marmara = 749;
	        int centralAnatolia = 389;
	        int easternAnatolia = 1539;
	        int southeasternAnatolia = 1598;
	        int mediterranean = 1794;
	        int italy= 2879;
	        int europe=4321;
	        int ukraine=4545;
	        int balkans= 4091;
	        int sum = 0;
	        //prices
	        
	        
	        String BlackSea = "BLACKSEA";
	        String Marmara = "MARMARA";
	        String CentralAnatolia = "CENTRALANATOLİA";
	        String EasternAnatolia = "EASTERNANATOLİA";
	        String SoutheasternAnatolia = "SOUTHEASTERNANATOLİA";
	        String Mediterranean = "MEDİTERRANEAN";
	        String Italy = "İTALY";
	        String Europe = "EUROPE";
	        String Ukraine = "UKRAİNE";
	        String Balkans = "BALKANS";

	        Scanner inputData = new Scanner(System.in);
	        boolean inWhileLoop = true;
	while (inWhileLoop)
      //Loop to check if users type correct or not
		{
	    System.out.println("Enter the region of your chosen tour.(if there is two words in the region they must be unified ");
	    System.out.println("For Example : blacksea, centralanatolia, mediterranean.............................ukraine,balkans,europe,italy");
	    String decision = inputData.next().toUpperCase();

	    if (decision.equals(BlackSea)) {
	        Scanner Input = new Scanner(System.in);
	        System.out.println("Please enter the number of people");
	        int numberOfPeople = Input.nextInt();
	        sum = numberOfPeople * blackSea;
	        System.out.println("Total sum is = " + sum + " Tl");
	        personLoop(numberOfPeople);
	        inWhileLoop = false;
	    } else if (decision.equals(Marmara)) {
	        Scanner Input = new Scanner(System.in);
	        System.out.println("Please enter the number of people");
	        int numberOfPeople = Input.nextInt();
	        sum = numberOfPeople * marmara;
	        System.out.println("Total sum is = " + sum + " Tl");
	        personLoop(numberOfPeople);
	        inWhileLoop = false;
	    } else if (decision.equals(CentralAnatolia)) {
	        Scanner Input = new Scanner(System.in);
	        System.out.println("Please enter the number of people");
	        int numberOfPeople = Input.nextInt();
	        sum = numberOfPeople * centralAnatolia;
	        System.out.println("Total sum is = " + sum + " Tl");
	        personLoop(numberOfPeople);
	        inWhileLoop = false;
	    } else if (decision.equals(EasternAnatolia)) {
	        Scanner Input = new Scanner(System.in);
	        System.out.println("Please enter the number of people");
	        int numberOfPeople = Input.nextInt();
	        sum = numberOfPeople * easternAnatolia;
	        System.out.println("Total sum is = " + sum + " Tl");
	        personLoop(numberOfPeople);
	        inWhileLoop = false;
	    } else if (decision.equals(SoutheasternAnatolia)) {
	        Scanner Input = new Scanner(System.in);
	        System.out.println("Please enter the number of people");
	        int numberOfPeople = Input.nextInt();
	        sum = numberOfPeople * southeasternAnatolia;
	        System.out.println("Total sum is = " + sum + " Tl");
	        personLoop(numberOfPeople);
	        inWhileLoop = false;
	    } else if (decision.equals(Mediterranean)) {
	        Scanner Input = new Scanner(System.in);
	        System.out.println("Please enter the number of people");
	        int numberOfPeople = Input.nextInt();
	        sum = numberOfPeople * mediterranean;
	        System.out.println("Total sum is = " + sum + " Tl");
	        personLoop(numberOfPeople);
	        inWhileLoop = false;
	    } else if (decision.equals(Italy)) {
	        Scanner Input = new Scanner(System.in);
	        System.out.println("Please enter the number of people");
	        int numberOfPeople = Input.nextInt();
	        sum = numberOfPeople * italy;
	        System.out.println("Total sum is = " + sum + " Tl");
	        personLoop(numberOfPeople);
	        inWhileLoop = false;
	    } else if (decision.equals(Europe)) {
	        Scanner Input = new Scanner(System.in);
	        System.out.println("Please enter the number of people");
	        int numberOfPeople = Input.nextInt();
	        sum = numberOfPeople * europe;
	        System.out.println("Total sum is = " + sum + " Tl");
	        personLoop(numberOfPeople);
	        inWhileLoop = false;
	    } else if (decision.equals(Ukraine)) {
	        Scanner Input = new Scanner(System.in);
	        System.out.println("Please enter the number of people");
	        int numberOfPeople = Input.nextInt();
	        sum = numberOfPeople * ukraine;
	        System.out.println("Total sum is = " + sum + " Tl");
	        personLoop(numberOfPeople);
	        inWhileLoop = false;
	    } else if (decision.equals(Balkans)) {
	        Scanner Input = new Scanner(System.in);
	        System.out.println("Please enter the number of people");
	        int numberOfPeople = Input.nextInt();
	        sum = numberOfPeople * balkans;
	        System.out.println("Total sum is = " + sum + " Tl");
	        personLoop(numberOfPeople);
	        inWhileLoop = false;
	    } else {
	        System.out.println("Please choose correct region");
	        System.out.println();
	    }
	}
	    }
	    public void personLoop(int Input){
	        String tempName;
	        String tempSurname;
	        int tempAge;
	        long tempID_No;
	        Scanner personInput = new Scanner(System.in);
	        System.out.println("Please enter an information of the people who will come to the tour");
	        for(int counter = 0 ; counter < Input ; counter++){
	            System.out.println("Name : ");
	            tempName = personInput.next();
	            System.out.println("Surname : ");
	            tempSurname = personInput.next();
	            System.out.println("Age  : ");
	            tempAge = personInput.nextInt();
	            System.out.println("ID No : " );
	            tempID_No = personInput.nextLong();
	            setName(tempName);
	            setSurname(tempSurname);
	            setAge(tempAge);
	            setID_No(tempID_No);
	            displayMenu();
	        }
	        System.out.println("The number of person is : " + Input );
	        System.out.println("Have a nice trip");
	        System.out.println();
	        System.out.println("                      ---Thank you for choosing us :)---");
	        System.out.println();
	    }
	    public void displayMenu(){
	        System.out.println("Name : " + getName());
	        System.out.println("Surname : " + getSurname());
	        System.out.println("Age : " + getAge());
	        System.out.println("ID No : " + getID_No());
	        System.out.println();
	        //Display menu
	    }
}


