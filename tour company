import java.util.Scanner;

public class Drive {

	 public static void main(String[] args){
	        Scanner userInput = new Scanner(System.in);
	        boolean keepOnRunning = true;
	        PaymentTransactions payment = new PaymentTransactions();
	        Domestic d = new Domestic();
	        International i = new International();

	        System.out.println("                         ---Software Tour---");
	        System.out.println("Choose the most suitable options to be guided to the tour that suits you best");
	        while (keepOnRunning)
	        //This is the loop of all the program
	        	{
	            int choice,choice2,choice5,choice6;
	            String choice3,choice4,choice7,choice8;

	            System.out.println("Press 1 for domestic Tours");
	            System.out.println("Press 2 for international tours");
	            System.out.println("Press 3 for quit");
	            choice = userInput.nextInt();
	            switch (choice){
	                case 1:
	                	//This will lead users to Domestic class
	                    boolean runningOnCase1Loop = true;
	                    while (runningOnCase1Loop) {
	                        d.ShowTours();
	                        System.out.println("Enter a number : ");
	                        choice2 = userInput.nextInt();
	                        d.setDecision(choice2);
	                        choice3 = userInput.next();
	                        if (choice3.equals("p"))
	                        	//Otherwise it will lead you to Show Tours Screen of Domestic Class
	                            runningOnCase1Loop= false;
	                    }
	                    payment.regionPayment();
	                    break;
	                case 2:
	                    boolean runningOnCase2Loop = true;
	                    while(runningOnCase2Loop) {
	                        i.ShowInternationalTours();
	                        System.out.println("Enter your choice:");
	                        choice4=userInput.next();
	                        if (choice4.equals("v")) {
	                            i.ShowVisaTours();
	                            choice5 = userInput.nextInt();
	                            i.setDecisionForVisa(choice5);
	                            choice7=userInput.next();
	                            if (choice7.equals("p"))
	                            	//Otherwise it will lead you to Show Tours Screen of International Class with visa
	                            {
	                                runningOnCase2Loop=false;
	                            }

	                        } else if (choice4.equals("n")) {
	                            i.ShowNonVisaTours();
	                            choice6 = userInput.nextInt();
	                            i.setDecisionForNonVisa(choice6);
	                            choice8=userInput.next();
	                            if (choice8.equals("p")) 
	                            	//Otherwise it will lead you to Show Tours Screen of International Class without visa
	                            {
	                                runningOnCase2Loop=false;
	                            }
	                        }
	                        else {
	                            System.out.println("Wrong choice please choose correct tours");
	                            System.out.println();
	                        }
	                    }
	                    payment.regionPayment();
	                    break;
	                case 3:
	                	//Termination
	                    System.out.println("                      ---Exiting---");
	                    keepOnRunning = false;
	                    break;
	                default:
	                	//If user presses something else
	                    System.out.println("wrong choice !!!");
	                    break;
	            }
	        }
	    }
	}



